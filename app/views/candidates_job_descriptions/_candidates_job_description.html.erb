<div id="<%= dom_id candidates_job_description %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Candidate:</strong>
    <%= candidates_job_description.candidate_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Job description:</strong>
    <%= candidates_job_description.job_description_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this candidates job description", candidates_job_description, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this candidates job description", edit_candidates_job_description_path(candidates_job_description), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
